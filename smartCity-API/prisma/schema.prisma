generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Report {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  type        String   // ex: route_barrée, danger, travaux
  latitude    Float
  longitude   Float
  timestamp   DateTime @default(now())
  status      String   @default("actif") // actif, expiré, confirmé

  @@map("reports")
}
